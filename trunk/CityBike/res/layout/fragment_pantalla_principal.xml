<android.support.v4.widget.DrawerLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/drawer_layout"    android:layout_width="match_parent"    android:layout_height="match_parent" ><FrameLayout    android:id="@+id/map_fragment"    android:layout_width="match_parent"    android:layout_height="match_parent" >    	<RelativeLayout	    android:id="@+id/map"	    android:layout_width="match_parent"	    android:layout_height="match_parent" 	    android:layout_below="@+id/facebooklinearlayout">	</RelativeLayout>    <RelativeLayout        android:id="@+id/facebooklinearlayout"        android:layout_width="match_parent"        android:layout_height="40dp"        android:background="@drawable/facebookbackground"        android:orientation="horizontal" >	    <com.facebook.widget.ProfilePictureView	        android:id="@+id/selection_profile_pic"	        android:layout_width="64dp"	        android:layout_height="40dp"	        android:layout_toLeftOf="@+id/selection_user_name"	        android:gravity="center_horizontal" >	    </com.facebook.widget.ProfilePictureView>	    <TextView	        android:id="@+id/selection_user_name"	        android:layout_width="wrap_content"	        android:layout_height="wrap_content"	        android:layout_marginRight="22dp"	        android:layout_marginTop="14dp"	        android:layout_toLeftOf="@+id/log_out_listview"	        android:text="User &apos;s name" />	    <ListView	        android:id="@+id/log_out_listview"	        android:layout_width="15dp"	        android:layout_height="15dp"	        android:layout_alignParentRight="true"	        android:layout_marginTop="14dp"	        android:background="@drawable/logout_arrow" >	    </ListView>    </RelativeLayout>	<RadioGroup	    android:id="@+id/radioGroup1"    android:layout_width="match_parent"    android:layout_height="79dp"    android:layout_gravity="bottom"    android:background="#80000000"    android:baselineAligned="true"    android:gravity="center_horizontal|center_vertical"    android:orientation="horizontal"    android:padding="4dp" >    <ToggleButton        android:id="@+id/id_b_bicleteria"        android:layout_width="95dp"        android:layout_height="wrap_content"        android:drawableTop="@drawable/startbikeapp32x32"        android:text="Bicicleterias"        android:textOff="Bicicleterias"        android:textOn="Bicicleterias"        android:textSize="13dp" />       <ToggleButton        android:id="@+id/id_b_estaciones"        android:layout_width="95dp"        android:layout_height="wrap_content"        android:drawableTop="@drawable/estaciones24x32"        android:minWidth="70dip"        android:text="Estaciones"        android:textOff="Estaciones"        android:textOn="Estaciones"        android:textAlignment="center"        android:textSize="13dp" />       <!--  <ToggleButton        android:id="@+id/id_b_bicisendas"        android:layout_width="95dp"        android:layout_height="wrap_content"        android:drawableTop="@drawable/rutas20x32"        android:minWidth="70dip"        android:text="Bicisendas"        android:textOff="Bicisendas"        android:textOn="Bicisendas"        android:textAlignment="center"        android:textSize="13dp" /> -->         <ToggleButton        android:id="@+id/id_b_rutas"        android:layout_width="95dp"        android:layout_height="wrap_content"        android:drawableTop="@drawable/rutas20x32"        android:minWidth="70dip"        android:text="Rutas"        android:textOff="Rutas"        android:textOn="Rutas"        android:textAlignment="center"        android:textSize="13dp" />	</RadioGroup></FrameLayout><ListView     android:id="@+id/left_drawer"     android:layout_width="240dp"     android:layout_height="match_parent"     android:layout_gravity="start"     android:background="#111"     android:choiceMode="singleChoice" ></ListView></android.support.v4.widget.DrawerLayout>