<?xml version="1.0" encoding="utf-8"?><FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/map_fragment"    android:layout_width="match_parent"    android:layout_height="match_parent" >        <com.facebook.widget.ProfilePictureView            android:id="@+id/selection_profile_pic"            android:layout_width="wrap_content"            android:layout_height="45dp"            android:gravity="center_horizontal" >        </com.facebook.widget.ProfilePictureView>        <TextView            android:id="@+id/selection_user_name"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="TextView"              android:gravity="center_horizontal"/>    <RelativeLayout        android:id="@+id/map"        android:layout_width="match_parent"        android:layout_height="match_parent" />    <RadioGroup    android:id="@+id/radioGroup1"    android:layout_width="match_parent"    android:layout_height="79dp"    android:layout_gravity="bottom"    android:background="#80000000"    android:baselineAligned="true"    android:gravity="center_horizontal|center_vertical"    android:orientation="horizontal"    android:padding="4dp" >    <Button        android:id="@+id/id_b_bicleteria"        android:layout_width="95dp"        android:layout_height="wrap_content"        android:drawableTop="@drawable/startbikeapp32x32"        android:text="Bicicleteria"        android:textSize="13dp" />       <Button        android:id="@+id/id_b_bicisendas"        android:layout_width="95dp"        android:layout_height="wrap_content"        android:drawableTop="@drawable/estaciones24x32"        android:minWidth="70dip"        android:text="Estaciones"        android:textAlignment="center"        android:textSize="13dp" />    <ToggleButton        android:id="@+id/id_b_rutas"        android:layout_width="95dp"        android:layout_height="wrap_content"        android:drawableTop="@drawable/rutas20x32"        android:minWidth="70dip"        android:text="Rutas"        android:textOff="Rutas (off)"        android:textOn="Rutas (on)"        android:textAlignment="center"        android:textSize="13dp" /></RadioGroup></FrameLayout>