<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#088A08"
    android:orientation="vertical">
 
     <fragment 
    	android:id="@+id/map_circuitos" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent" 
        class="com.google.android.gms.maps.SupportMapFragment" />
     
 <RadioGroup
     android:id="@+id/radioGroup1"
     android:layout_width="match_parent"
     android:layout_height="79dp"
     android:layout_gravity="bottom"
     android:background="#80000000"
     android:baselineAligned="true"
     android:gravity="center_horizontal|center_vertical"
     android:orientation="horizontal"
     android:padding="4dp" >

    <Button
        android:id="@+id/id_b_crearCircuito"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/crear32x32"
        android:minWidth="70dip"
        android:text="Crear"
        android:textSize="13dp" />

    <Button
        android:id="@+id/id_b_guardarCircuito"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/guardar32x32"
        android:minWidth="70dip"
        android:text="Guardar"
        android:textSize="13dp" />   
    <Button
        android:id="@+id/id_b_invitarContacto"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/invitar32x32"
        android:minWidth="70dip"
        android:text="Invitar"
        android:textAlignment="center"
        android:textSize="13dp" />
    
</RadioGroup>

 <ImageButton
     android:id="@+id/id_b_facebook"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="right"
     android:background="#00000000"
     android:padding="15dp"
     android:src="@drawable/facebook51x51" />

</FrameLayout>